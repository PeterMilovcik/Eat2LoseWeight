<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Eat2LoseWeight.Views.EditWeightHistoryPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Edit Weight History"
    BackgroundColor="{DynamicResource BackgroundPageColor}"
    Shell.TabBarIsVisible="False">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding SubmitCommand}"
            IconImageSource="ic_ok.png"
            Text="Ok" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>

        <StackLayout>

            <CollectionView
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}"
                SelectionChangedCommand="{Binding SelectionChangedCommand}"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Frame
                                Margin="15,3"
                                Padding="0"
                                CornerRadius="3"
                                HasShadow="True">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Label
                                        Grid.Column="0"
                                        Margin="15,6"
                                        FontSize="Medium"
                                        Text="{Binding WeightRecord.MeasuredAt}" />

                                    <Label
                                        Grid.Column="1"
                                        Margin="15,6"
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        Text="{Binding WeightRecord.Value}" />

                                    <ImageButton
                                        Grid.Column="2"
                                        Margin="1"
                                        Command="{Binding DeleteCommand}"
                                        HeightRequest="34"
                                        HorizontalOptions="End"
                                        Source="ic_remove.png"
                                        VerticalOptions="Center"
                                        WidthRequest="34" />

                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>