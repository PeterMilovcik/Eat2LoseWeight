<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Eat2LoseWeight.Views.MorePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="More"
    BackgroundColor="{DynamicResource BackgroundPageColor}">
    <ContentPage.Content>
        <TableView>

            <TableSection Title="History">
                <TextCell
                    Command="{Binding WeightHistoryCommand}"
                    Text="Weight"
                    TextColor="{DynamicResource FontColor}" />
                <TextCell
                    Command="{Binding FoodHistoryCommand}"
                    Text="Food"
                    TextColor="{DynamicResource FontColor}" />
            </TableSection>

            <TableSection Title="Units">
                <TextCell Text="Kilogram (kg)" TextColor="{DynamicResource FontColor}" />
            </TableSection>

        </TableView>
    </ContentPage.Content>
</ContentPage>