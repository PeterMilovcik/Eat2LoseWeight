<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Eat2LoseWeight.Views.TodayPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fabControl="clr-namespace:Refractored.FabControl;assembly=Refractored.FabControl"
    Title="{Binding Title}"
    BackgroundColor="{DynamicResource BackgroundPageColor}">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding ToggleSortCommand}"
            IconImageSource="ic_sort.png"
            Text="Sort" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <CollectionView
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                ItemsSource="{Binding Items}">
                <CollectionView.EmptyViewTemplate>
                    <DataTemplate>
                        <Label
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="What have you eat or drink today?"
                            VerticalOptions="CenterAndExpand" />
                    </DataTemplate>
                </CollectionView.EmptyViewTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Grid>
                            <Frame>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Label
                                        Grid.Column="0"
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        HorizontalTextAlignment="Start"
                                        Text="{Binding Name}"
                                        VerticalTextAlignment="End" />

                                    <Label
                                        Grid.Column="1"
                                        FontSize="Medium"
                                        HorizontalTextAlignment="End"
                                        Text="{Binding AtFormatted}"
                                        VerticalTextAlignment="End" />
                                </Grid>
                            </Frame>
                        </Grid>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="20,10,10,20"
                Command="{Binding AddWeightCommand}"
                HorizontalOptions="FillAndExpand"
                Text="Add Weight" />

            <Button
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,10,20,20"
                Command="{Binding AddFoodCommand}"
                HorizontalOptions="FillAndExpand"
                Text="Add Food" />

        </Grid>
    </ContentPage.Content>
</ContentPage>