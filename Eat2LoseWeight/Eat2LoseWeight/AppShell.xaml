<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:eat2LoseWeight="clr-namespace:Eat2LoseWeight;assembly=Eat2LoseWeight"
       x:Class="Eat2LoseWeight.AppShell"
       Title="Eat 2 Lose Weight">
    <Shell.Resources>
        <Style x:Key="BaseStyle" TargetType="Element">
            <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource Primary}" />
            <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource Secondary}" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource PrimaryDark}" />
        </Style>
    </Shell.Resources>
    <TabBar Style="{StaticResource BaseStyle}">
        <Tab Title="Meals">
            <ShellContent>
                <eat2LoseWeight:MainPage />
            </ShellContent>
        </Tab>
        <Tab Title="Summary">
            <ShellContent>
                <eat2LoseWeight:MainPage />
            </ShellContent>
        </Tab>
        <Tab Title="More">
            <ShellContent>
                <eat2LoseWeight:MainPage />
            </ShellContent>
        </Tab>
    </TabBar>
</Shell>